{
  "mcpServers": {
    "doc2mcp-petstore": {
      "command": "node",
      "args": ["/path/to/doc2mcp/dist/index.js"],
      "env": {
        "DOC_URLS": "https://petstore.swagger.io/v2/swagger.json",
        "TRACING_ENABLED": "true"
      }
    },
    "doc2mcp-custom-api": {
      "command": "node",
      "args": ["/path/to/doc2mcp/dist/index.js"],
      "env": {
        "DOC_URLS": "https://your-api.com/openapi.json,https://your-api.com/docs",
        "TRACING_ENABLED": "true",
        "ARIZE_ENDPOINT": "http://localhost:6006/v1/traces"
      }
    }
  }
}
