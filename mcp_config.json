{
  "inputs": [
    {
      "id": "NOTION_TOKEN",
      "type": "promptString",
      "description": "Notion API Token (https://www.notion.so/profile/integrations)",
      "password": true
    },
    {
      "id": "GOOGLE_API_KEY",
      "type": "promptString",
      "description": "Google API Key for Gemini",
      "password": true
    }
  ],
  "servers": {
    "notion": {
      "command": "npx",
      "args": [
        "-y",
        "@notionhq/notion-mcp-server"
      ],
      "env": {
        "OPENAPI_MCP_HEADERS": {
          "Authorization": "Bearer ${input:NOTION_TOKEN}",
          "Notion-Version": "2022-06-28"
        }
      },
      "type": "stdio"
    },
    "doc2mcp": {
      "command": "python3",
      "args": [
        "-m",
        "doc2mcp.server"
      ],
      "cwd": "/home/ash/projects/Doc2Mcp",
      "env": {
        "GOOGLE_API_KEY": "${input:GOOGLE_API_KEY}",
        "TOOLS_CONFIG_PATH": "/home/ash/projects/Doc2Mcp/tools.yaml"
      },
      "type": "stdio"
    }
  }
}
